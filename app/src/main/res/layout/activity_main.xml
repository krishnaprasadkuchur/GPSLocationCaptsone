<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="group14.mc.asu.edu.gpslocationcapstone.MainActivity">


    <EditText
        android:id="@+id/riderNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/startTrackingButton"
        android:layout_below="@+id/textView"
        android:layout_marginStart="38dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Rider Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/startTrackingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/riderNameText"
        android:layout_marginStart="33dp"
        android:layout_marginTop="170dp"
        android:onClick="startTrackingService"
        android:text="Start" />

    <Button
        android:id="@+id/stopTrackingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startTrackingButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        android:onClick="stopTrackingService"
        android:text="Stop" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="27dp"
        android:layout_toStartOf="@+id/stopTrackingButton"
        android:text="RiderTrack"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
